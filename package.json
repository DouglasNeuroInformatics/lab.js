{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "lab.js/babel-loader",
      "lab.js/chai",
      "lab.js/chai/**",
      "lab.js/es6-promise",
      "lab.js/es6-promise/**",
      "lab.js/karma",
      "lab.js/karma-coverage",
      "lab.js/karma-coverage/**",
      "lab.js/karma-chrome-launcher",
      "lab.js/karma-chrome-launcher/**",
      "lab.js/karma-mocha",
      "lab.js/karma-mocha/**",
      "lab.js/karma-sauce-launcher",
      "lab.js/karma-sauce-launcher/**",
      "lab.js/mocha",
      "lab.js/mocha/**",
      "lab.js/lodash",
      "lab.js/sinon",
      "lab.js/sinon/**",
      "lab.js/webpack",
      "lab.js/webpack/**",
      "lab.js.builder/bootstrap",
      "**/react",
      "**/react/**",
      "**/react-dom",
      "**/react-dom/**",
      "lab.js.builder/react-scripts",
      "lab.js.builder/react-scripts/**",
      "lab.js.website/bootstrap"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:ci": "lerna bootstrap --npm-ci-mode",
    "build:docs": "cd docs && make html",
    "clean:docs": "cd docs && make clean",
    "clean:modules": "lerna clean",
    "watch:docs": "onchange 'docs/**/*.rst' 'docs/**/*.py' -- npm run build:docs"
  },
  "resolutions": {
    "canvas": "^2.11.2",
    "webdriverio": "^7.19.5"
  },
  "dependencies": {},
  "devDependencies": {
    "lerna": "^6.0.0",
    "onchange": "^7.1.0",
    "typescript": "^4.7.4"
  }
}
