{
  "name": "lab.js",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/builder",
      "packages/library",
      "packages/website",
      "tasks/*"
    ],
    "nohoist": [
      "lab.js/babel-loader",
      "lab.js/chai",
      "lab.js/chai/**",
      "lab.js/es6-promise",
      "lab.js/es6-promise/**",
      "lab.js/karma",
      "lab.js/karma-coverage",
      "lab.js/karma-coverage/**",
      "lab.js/karma-chrome-launcher",
      "lab.js/karma-chrome-launcher/**",
      "lab.js/karma-mocha",
      "lab.js/karma-mocha/**",
      "lab.js/karma-sauce-launcher",
      "lab.js/karma-sauce-launcher/**",
      "lab.js/mocha",
      "lab.js/mocha/**",
      "lab.js/lodash",
      "lab.js/sinon",
      "lab.js/sinon/**",
      "lab.js/webpack",
      "lab.js/webpack/**",
      "lab.js.builder/bootstrap",
      "**/react",
      "**/react/**",
      "**/react-dom",
      "**/react-dom/**",
      "lab.js.builder/react-scripts",
      "lab.js.builder/react-scripts/**",
      "lab.js.website/bootstrap"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:ci": "lerna bootstrap --npm-ci-mode",
    "build": "lerna run build",
    "build:docs": "cd docs && make html",
    "clean": "find . -type d '(' -name 'build' -o -name 'dist' -o -name 'node_modules' ')' -prune -exec rm -rf {} \\;",
    "clean:docs": "cd docs && make clean",
    "clean:modules": "lerna clean",
    "watch:docs": "onchange 'docs/**/*.rst' 'docs/**/*.py' -- npm run build:docs"
  },
  "resolutions": {
    "canvas": "^2.11.2",
    "webdriverio": "^7.19.5"
  },
  "dependencies": {
    "type-fest": "^4.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^8.55.0",
    "@types/eslint": "^8.44.8",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "esbuild": "^0.19.9",
    "eslint": "^8.55.0",
    "eslint-plugin-jsdoc": "^46.9.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "globals": "^13.23.0",
    "knip": "^3.7.0",
    "lerna": "^6.0.0",
    "onchange": "^7.1.0",
    "prettier": "^3.1.1",
    "typescript": "~5.0.0"
  }
}
