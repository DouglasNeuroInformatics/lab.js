{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "noEmit": false,
    "outDir": "dist/es6",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "src",
    "sourceMap": true,
    "verbatimModuleSyntax": false
  },
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*"],
  "typedocOptions": {
    "entryPoints" : ["./src/index.ts"],
    "plugin": ["typedoc-plugin-missing-exports"],
    "exclude":[ "**/node_modules/**" ],
  }
}
