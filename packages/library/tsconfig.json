{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "noEmit": false,
    "outDir": "dist/types",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "src",
    "sourceMap": true,
    "verbatimModuleSyntax": false
  },
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*"]
}
